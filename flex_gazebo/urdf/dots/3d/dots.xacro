<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">


  <!-- Import all Gazebo-customization elements, including Gazebo colors -->
  <xacro:include filename="$(find flex_gazebo)/urdf/truss/3d/tomato.xacro"/>

  <xacro:macro name="truss" params="*origin">
    <xacro:property name="dot_radius" value="0.03" />
    <xacro:property name="L" value="0.08" />


    <joint name="truss_joint" type="floating">
      <xacro:insert_block name="origin" />
      <parent link="world"/>
      <child link="tomato0" />
    </joint>

    <xacro:tomato tomato_name="0" radius="${dot_radius}" parent_link="world">
          <origin xyz="0 0 0" rpy="0 0 0" />
    </xacro:tomato>

    <xacro:tomato tomato_name="1" radius="${dot_radius}" parent_link="tomato0">
          <origin xyz="${-L} ${L} 0" rpy="0 0 0" />
    </xacro:tomato>

    <xacro:tomato tomato_name="2" radius="${dot_radius}" parent_link="tomato0">
          <origin xyz="${-L} 0 0" rpy="0 0 0" />
    </xacro:tomato>

    <xacro:tomato tomato_name="3" radius="${dot_radius}" parent_link="tomato0">
          <origin xyz="${-L} ${-L} 0" rpy="0 0 0" />
    </xacro:tomato>

    <xacro:tomato tomato_name="4" radius="${dot_radius}" parent_link="tomato0">
          <origin xyz="0 ${-L} 0" rpy="0 0 0" />
    </xacro:tomato>

    <xacro:tomato tomato_name="5" radius="${dot_radius}" parent_link="tomato0">
          <origin xyz="${L} ${-L} 0" rpy="0 0 0" />
    </xacro:tomato>

    <xacro:tomato tomato_name="6" radius="${dot_radius}" parent_link="tomato0">
          <origin xyz="${L} 0 0" rpy="0 0 0" />
    </xacro:tomato>

    <xacro:tomato tomato_name="7" radius="${dot_radius}" parent_link="tomato0">
          <origin xyz="${L} ${L} 0" rpy="0 0 0" />
    </xacro:tomato>

    <xacro:tomato tomato_name="8" radius="${dot_radius}" parent_link="tomato0">
          <origin xyz="0 ${L} 0" rpy="0 0 0" />
    </xacro:tomato>


  </xacro:macro>
</robot>
