<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!-- Import all Gazebo-customization elements, including Gazebo colors -->
  <xacro:include filename="$(find flex_gazebo)/urdf/tomato.gazebo.xacro" />

  <xacro:macro name="tomato_2d" params="*origin">


    <joint name="tomato_joint" type="floating">
      <xacro:insert_block name="origin" />
      <parent link="world"/>
      <child link="tomato_link" />
    </joint>


    <link name="tomato_link">
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size = "0.15 0.18 0.001" />
        </geometry>
      </collision>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size = "0.15 0.18 0.001" />
        </geometry>
        <material name="Blue"/>
      </visual>

      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="1"/>
        <inertia
	         ixx="1.0" ixy="0.0" ixz="0.0"
           iyy="1.0" iyz="0.0"
           izz="1.0"/>
       </inertial>
     </link>

     <xacro:tomato_gazebo/>
  </xacro:macro>
</robot>
