<?xml version="1.0"?>

<launch>

  <arg name="marker_size" doc="Size of the ArUco marker used, in meters" default="0.08"/>
  <arg name="marker_id" doc="The ID of the ArUco marker used" default="26" />
     <!-- start ArUco -->
  <node name="aruco_tracker" pkg="aruco_ros" type="single">
      <remap from="/camera_info" to="px150/camera/color/camera_info" />
      <remap from="/image" to="px150/camera/color/image_raw" />
      <param name="image_is_rectified" value="false"/>
      <param name="marker_size"        value="$(arg marker_size)"/>
      <param name="marker_id"          value="$(arg marker_id)"/>
      <param name="reference_frame"    value="world"/>
      <param name="camera_frame"       value="camera_color_optical_frame"/>
      <param name="marker_frame"       value="camera_marker" />
  </node>
</launch>
